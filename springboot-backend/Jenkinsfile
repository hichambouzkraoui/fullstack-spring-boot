pipeline {
    agent any
    stages {
        stage('UnitTests') {
            steps {
                dir("springboot-backend"){
                    sh 'mvn test -Dgroups="UnitTests"'
                }
            }
        }
        stage('Package') {
            steps {
                dir("springboot-backend"){
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
}